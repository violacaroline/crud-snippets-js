<h1>Update snippet</h1>
<form class="row g-3" method="post" action="/snippets/<%= viewData?.id %>/update">
  <div class="col-md-12">
    <label class="form-label" for="descriptionInput">
      Title
    </label>
    <input type="text" class="form-control" id="descriptionInput" name="title" 
      placeholder="Update snippet title here" value="<%= viewData?.title %>" required="required"
    autofocus="autofocus" />
    <label class="form-label" for="snippetTextarea">
      Snippet
    </label>
    <textarea name="snippet" id="snippetTextarea" required="required"><%= viewData?.snippet %></textarea>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>
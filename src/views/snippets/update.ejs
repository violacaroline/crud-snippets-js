<h1>Update snippet</h1>
<form class="row g-3" method="post" action="/snippets/<%= viewData?.id %>/update"> <!-- REMOVED THE DOT ./SNIPPETS -->
  <div class="col-md-12">
    <label class="form-label" for="descriptionInput">
      Title
    </label>
    <input type="text" class="form-control" id="descriptionInput" name="title" 
      placeholder="Update snippet title here" value="<%= viewData?.title %>" required="required"
    autofocus="autofocus" /> <!--CHANGED VIEWDATA?.DESCRIPTION TO TITLE --> <!-- CHANGED NAME FROM DESCRIPTION -->
    <label class="form-label" for="snippetTextarea">
      Snippet
    </label>
    <textarea name="snippet" id="snippetTextarea" value="<%= viewData?.snippet %>" required="required"></textarea>
  </div> <!-- WHY DOES <%= viewData?.title %> SHOW/SAVE BUT NOT FOR SNIPPET IN TEXTAREA? -->
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>